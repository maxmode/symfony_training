{% extends 'base.html.twig' %}

{% block title %}Form{% endblock %}

{% block body %}
    <h1>Battery Recycle App</h1>
    <h2>Submitting form</h2>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
    <p>
      <a href="/batteries">Back</a>
    </p>
{% endblock %}

{% block stylesheets %}
<style type="text/css">
#appbundle_batterysubmit > div:nth-last-child(3) {
    margin-bottom: 10px;
}

#appbundle_batterysubmit > div {
    margin-bottom: 5px;
}

label {
    width: 40px;
    text-align: right;
    display: inline-block;
    margin-right: 10px;
    padding: 4px;
    border-radius: 50% / 90%;
    color: #336399;
    font-size: 16px;
    font-weight: bold;
}

input {
    height: 20px;
    border: 2px solid #336399;
    border-radius: 10% / 90%;
}

button {
    height: 20px;
    border: 2px solid #336399;
    background: #336399;
    border-radius: 10% / 90%;
    color: #FFF;
    font-weight: bold;
    height: 30px;
    width: 90px;
}
</style>
{% endblock %}
